            type="text"
            class="search-input"
            placeholder="Inmuebles en Guadalajra..."
          />
          <span class="search-icon">
            <i class="fa-solid fa-magnifying-glass"></i>
          </span>
        </div>
      </div>
      <!-- GRID -->
      <div class="properties-grid-container">
        {
          properties.map((property) => (
            <PropertyCard
              property={property}
              flexGrow={1}
              flexShrink={1}
              flexBasis="410px"
              height="480px"
